<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/head_view_new" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.iii360.box.view.NewLineLinearLayout
                android:id="@+id/mytag_selector_layout"
                style="@style/SetUserInfoLayoutStyle"
                android:layout_margin="10dp"
                android:orientation="horizontal" >
            </com.iii360.box.view.NewLineLinearLayout>

            <LinearLayout
                style="@style/SetUserInfoLayoutStyle"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mytag_question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="什么音乐最让你痴迷"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/mytag_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_mytag_next" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <com.iii360.box.view.NewLineLinearLayout
                android:id="@+id/mytag_item_layout"
                style="@style/SetUserInfoLayoutStyle"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal" >
            </com.iii360.box.view.NewLineLinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>