<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_view_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/music_list_playing_tag_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="正在播放"
            android:textColor="#3898d8"
            android:textSize="18dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#cccccc" />

        <Button
            android:id="@+id/music_list_goodmusic_tag_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="红心歌曲"
            android:textColor="#333333"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/music_list_playing_tag_below_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"
            android:background="#3898d8" />

        <View
            android:id="@+id/music_list_goodmusic_tag_below_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"
            android:background="#cccccc" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/music_list_viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>