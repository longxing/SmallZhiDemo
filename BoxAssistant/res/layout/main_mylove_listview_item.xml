<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/ba_list_item_selector"
    android:clickable="true"
    android:focusable="false"
    android:id="@+id/music_layout"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="35dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/music_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="小苹果小苹果"
            android:textColor="@color/light_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/music_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="筷子兄弟"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/music_play_status_iv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_playing" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/music_more" />
</LinearLayout>