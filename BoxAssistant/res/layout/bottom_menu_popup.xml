<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/blank_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/music_paly_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ba_list_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/music_play" />

            <TextView
                style="@style/SetUserInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="立即播放"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/music_add_playlist_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ba_list_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/music_add_playlist" />

            <TextView
                style="@style/SetUserInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="添加到播放列表"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/music_stop_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ba_list_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/music_delete" />

            <TextView
                style="@style/SetUserInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="取消红心歌曲"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/music_setremind_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ba_list_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/set_remind" />

            <TextView
                style="@style/SetUserInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设置为备忘铃声"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/bottom_menu_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ba_list_item_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/light_black"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>