<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_bg"
    android:orientation="vertical" >

    <include layout="@layout/head_view_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/main_set_third_huanteng_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/main_set_item_selector" >

            <TextView
                android:id="@+id/main_set_third_huanteng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/main_set_third_huanteng_switch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/main_set_third_huanteng_iv"
                android:textColor="#3898d9"
                android:textSize="@dimen/text_content_size" />

            <ImageView
                android:id="@+id/main_set_third_huanteng_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/online_box_item_ico" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="13dp"
            android:background="#cccccc"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/main_set_third_weixin_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/main_set_item_selector"
            android:visibility="gone" >

            <TextView
                android:id="@+id/main_set_third_weixin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/main_set_third_weixin_switch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/main_set_third_weixin_iv"
                android:textColor="#3898d9"
                android:textSize="@dimen/text_content_size" />

            <ImageView
                android:id="@+id/main_set_third_weixin_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/set_third_add_account" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc" />
    </LinearLayout>

</LinearLayout>