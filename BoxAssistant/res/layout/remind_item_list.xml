<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/remind_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/remind_datetime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="2014/12/12"
            android:textColor="#222222"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/remind_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/remind_datetime_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="起床"
            android:textColor="#888888"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/remind_hour_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:text="08:00"
            android:textColor="#acacac"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/remind_clock_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/remind_msg_tv"
            android:layout_alignLeft="@+id/remind_hour_tv"
            android:layout_marginLeft="7dp"
            android:src="@drawable/remind_logo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/remind_main_layout"
        android:background="#cccccc" />

</RelativeLayout>