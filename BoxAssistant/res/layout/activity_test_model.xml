<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/ba_view_head_bg"
        android:gravity="center"
        android:text="测试模式"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_reset_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ba_connect_btn_selector"
        android:text="重新设置帐号密码" />

    <Button
        android:id="@+id/btn_reset_port"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ba_connect_btn_selector"
        android:text="设置程序端口号" />

    <Button
        android:id="@+id/btn_scanner_2code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ba_connect_btn_selector"
        android:text="生产线模式(扫描条形码,不支持纯数字)" />

    <TextView
        android:id="@+id/tv_scanner_result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="扫描结果:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ba_connect_btn_selector"
            android:text="发送条形码" />

        <TextView
            android:id="@+id/tv_send_status"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="发送状态" />
    </LinearLayout>

</LinearLayout>